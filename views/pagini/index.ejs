                                <mrow>
                                    <mi>P</mi>
                                    <mo>=</mo>
                                    <mi>P</mi><sub>
                                        <mi>inițial</mi>
                                    </sub>
                                    <mo>&#x2212;</mo>
                                    <mfrac>
                                        <mrow>
                                            <mi>P</mi><sub>
                                                <mi>inițial</mi>
                                            </sub>
                                            <mo>&#x22C5;</mo>
                                            <mi>D</mi>
                                        </mrow>
                                        <mn>100</mn>
                                    </mfrac>
                                </mrow>
                            </math>

                            <p>Unde:</p>
                            <ul>
                                <li><strong>P</strong> – prețul final</li>
                                <li><strong>P<sub>inițial</sub></strong> – prețul inițial al produsului</li>
